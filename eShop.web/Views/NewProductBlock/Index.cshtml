@model eShop.web.ViewModels.NewProductViewModel

<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <div class="section-title">
                    <h4>@Model.CurrentBlock.Heading</h4>
                </div>
            </div>
            <div class="col-lg-8 col-md-8">
                <ul class="filter__controls">
                    <li class="active" data-filter="*">All</li>
                    @foreach (var c in Model.Catalogs)
                    {
                        <li data-filter=".@c.CatalogName.ToLower()">@c.CatalogName</li>
                    }
                </ul>
            </div>
        </div>
        <div class="row property__gallery">
            @foreach (var c in Model.Catalogs)
            {
                foreach (var p in c.Products)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mix @c.CatalogName.ToLower()">
                        <div class="product__item">
                            <div class="product__item__pic set-bg" data-setbg="@p.Image">
                                <div class="label new">New</div>
                                <ul class="product__hover">
                                    <li><a href="@p.ProductURL" class="image-popup"><span class="arrow_expand"></span></a></li>
                                    <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                                    <li><a href="#"><span class="icon_bag_alt"></span></a></li>
                                </ul>
                            </div>
                            <div class="product__item__text">
                                <h6><a href="@p.ProductURL">@p.ProductName</a></h6>
                                <div class="rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="product__price">@p.MinPrice.CurrenyFormat() - @p.MaxPrice.CurrenyFormat() </div>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</section>
<!-- Product Section End -->
